<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ButtonActivity">

    <Button
        android:id="@+id/btn_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ff2c6d"
        android:elevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="有边界的动画"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btn_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ff2c6d"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:minWidth="100dp"
        android:padding="10dp"
        android:text="无边界动画"
        android:textColor="#fff"
        android:textSize="16sp"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/btn_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="@drawable/ripple_no"
        android:text="自定义前景无边界 黄色" />

    <Button
        android:id="@+id/btn_btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ripple_no"
        android:text="自定义背景无边界 黄色" />

    <Button
        android:id="@+id/btn_btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ripple_yes"
        android:text="自定义背景 有边界" />

    <Button
        android:id="@+id/btn_btn_6"
        android:layout_width="wrap_content"
        android:foreground="@drawable/ripple_yes"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="按钮6" />

</LinearLayout>