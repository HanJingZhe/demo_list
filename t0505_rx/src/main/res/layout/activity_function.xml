<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/rxZip_text"
            android:textColor="#000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/func_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delay()" />

        <Button
            android:id="@+id/func_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="do 系列操作符" />

        <Button
            android:id="@+id/func_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onErrorReturn() 操作符" />

        <Button
            android:id="@+id/func_btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onExceptionResumeNext()/onErrorResumeNext() 操作符" />

        <Button
            android:id="@+id/func_btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retry() 操作符" />

        <Button
            android:id="@+id/func_btn_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retryUntil() 操作符" />

        <Button
            android:id="@+id/func_btn_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retryWhen() 操作符" />

        <Button
            android:id="@+id/func_btn_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="repeat() 操作符" />

        <Button
            android:id="@+id/func_btn_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="repeatWhen() 操作符" />

        <Button
            android:id="@+id/func_btn_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="debounce() 操作符" />


    </LinearLayout>

</ScrollView>