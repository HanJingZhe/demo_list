<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/rxCreate_text"
            android:textColor="#000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/create_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create() 操作符" />

        <Button
            android:id="@+id/create_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just() 操作符" />

        <Button
            android:id="@+id/create_btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fromIterable() 操作符" />


        <Button
            android:id="@+id/create_btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timer()操作符" />

        <Button
            android:id="@+id/create_btn_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fromArray() 操作符" />

        <Button
            android:id="@+id/create_btn_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="interval() 定时器" />


        <Button
            android:id="@+id/create_btn_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="intervalRange() 操作符" />


        <Button
            android:id="@+id/create_btn_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Range() 操作符" />

    </LinearLayout>

</ScrollView>