<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_tv_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="当前电量" />


        <TextView
            android:id="@+id/main_tv_current_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="当前内存" />


        <TextView
            android:id="@+id/main_tv_total_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="总内存" />

        <TextView
            android:id="@+id/main_tv_cup_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="CPU MAX" />

        <TextView
            android:id="@+id/main_tv_cup_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="CPU MIN" />

        <TextView
            android:id="@+id/main_tv_cup_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="CPU CURRENT" />

        <TextView
            android:id="@+id/main_tv_cup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="CPU NAME" />

        <TextView
            android:id="@+id/main_tv_net_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="NEW TYPE" />

        <TextView
            android:id="@+id/main_tv_power_ing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="POWERING?" />

        <Button
            android:id="@+id/main_btn_get_current_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_string__current"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_btn_get_current_cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_string_cup_current"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_btn_get_use_cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取cup使用率"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
